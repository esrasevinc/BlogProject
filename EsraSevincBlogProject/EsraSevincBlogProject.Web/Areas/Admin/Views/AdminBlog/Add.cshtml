@model BlogViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Forms</h5>
            <div class="card">
                <div class="card-body">
                    <form id="form" asp-action="Add" method="post" class="wizard-big">
                        <div class="mb-3">
                            <label for="blogTitle" class="form-label">Blog Başlığı</label>
                            <input asp-for="@Model.Blog.BlogTitle" type="text" class="form-control">
                            <span asp-validation-for="@Model.Blog.BlogTitle"></span>
                        </div>
                        <div class="mb-3">
                            <label for="blogDescription" class="form-label">Blog İçeriği</label>
                            <input class="summernote form-control" asp-for="@Model.Blog.BlogDescription" type="text">
                            <span asp-validation-for="@Model.Blog.BlogDescription"></span>
                        </div>
                        <div class="mb-3">
                            <label for="blogAuthor" class="form-label">Blog Yazarı</label>
                            <input id="blogAuthor" name="blogAuthor" type="text" class="form-control">
                            <div id="blogAuthor" class="form-text"></div>
                        </div>
                        <div class="mb-3">
                            <label for="blogSummary" class="form-label">Blog Özeti</label>
                            <input id="blogSummary" name="blogSummary" type="text" class="form-control">
                            <div id="blogSummary" class="form-text"></div>
                        </div>
                        <div class="mb-3">
                            <label for="categoryID" class="form-label">Kategori</label>
                            <select class="form-select" asp-items="@Model.CatSel" asp-for="CategoryID"></select>
                            <div id="categoryID" class="form-text"></div>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>




