@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>  <a class="btn btn-w-m btn-primary" asp-action="Add" asp-controller="AdminBlog">Blog Yazısı Ekle</a></p>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kategoriler</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Blog Başlığı</th>
                                    <th>Blog Yazısı</th>
                                    <th>Blog Yazarı</th>
                                    <th>Blog Özeti</th>
                                    <th>Kategori</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <th>@item.ID</th>
                                        <th>@item.BlogTitle</th>
                                        <th>@item.BlogDescription</th>
                                        <th>@item.BlogAuthor</th>
                                        <th>@item.BlogSummary</th>
                                        <th>@item.CategoryName</th>
                                        <th>
                                            <a asp-action="Update" asp-controller="AdminBlog" asp-route-id="@item.ID" title="Güncelle" class="btn btn-outline btn-warning">Güncelle</a>
                                            <a asp-action="Delete" asp-controller="AdminBlog" asp-route-id="@item.ID" title="Sil" class="btn btn-outline btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

